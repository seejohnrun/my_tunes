!!! 5

%html

  %head
    %title myTunes
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body

    #wrapper

      - if notice
        .notice= notice
      - if alert
        .alert= alert

      #top

        #controls
          = link_to 'Library', root_url
          - if user_signed_in?
            = link_to 'Logout', destroy_session_path(:user)
          - else
            = link_to 'Login', new_session_path(:user)

        #site_name myTunes      
        
      = yield
