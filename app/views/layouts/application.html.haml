!!! 5

%html

  %head
    %title myTunes
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    - if notice
      .notice= notice
    - if alert
      .alert= alert

    %h1 myTunes
    
    - if user_signed_in?
      = link_to 'logout', destroy_session_path(:user)
    - else
      = link_to 'login', new_session_path(:user)

    = yield
